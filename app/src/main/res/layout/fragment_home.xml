<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragment.HomeFragment">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:fontFamily="@font/roboto"
        android:textSize="17sp"
        android:textColor="@color/primary"
        android:paddingLeft="25sp"
        android:paddingTop="10sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul"
        android:layout_marginTop="15sp"
        android:background="@color/line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="49sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200sp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/bannerPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabBanner"
                    app:tabIndicatorHeight="0sp"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="5sp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:tabBackground="@drawable/custom_tab_banner"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primary"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="25sp"
                android:textSize="14sp"
                android:text="Welcome to Explore Bandung Raya"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                app:cardCornerRadius="10sp"
                android:layout_marginHorizontal="25sp"
                android:layout_marginVertical="20sp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivImage1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/ic_dest"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivImage1"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="120sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:text="Ingin bepergian di daerah Bandung Raya tetapi tidak tahu ingin pergi kemana?"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                app:cardCornerRadius="10sp"
                android:layout_marginHorizontal="25sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivImage2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/ic_chill"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivImage2"
                        android:layout_marginRight="120sp"
                        android:layout_marginLeft="20sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:text="Tenang, aplikasi ini adalah solusinya, anda bisa mencari pilihan destinasi yang ingin anda tuju"
                        android:gravity="end" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3sp"
                app:cardCornerRadius="10sp"
                android:layout_marginHorizontal="25sp"
                android:layout_marginVertical="20sp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/ivImage3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/ic_airplane"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivImage3"
                        android:layout_marginRight="20sp"
                        android:layout_marginLeft="120sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:text="Cari destinasimu, pergilah bersamaku...."/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>