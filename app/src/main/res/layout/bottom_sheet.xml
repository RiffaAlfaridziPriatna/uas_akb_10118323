<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnBandung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Kota Bandung"
            android:textSize="13sp"
            android:layout_marginTop="15sp"
            android:paddingHorizontal="25sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"/>
        <Button
            android:id="@+id/btnCimahi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Kota Cimahi"
            android:textSize="13sp"
            android:paddingHorizontal="25sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"/>
        <Button
            android:id="@+id/btnKbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Kabupaten Bandung Barat"
            android:textSize="13sp"
            android:paddingHorizontal="25sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"/>
        <Button
            android:id="@+id/btnKb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Kabupaten Bandung"
            android:textSize="13sp"
            android:layout_marginBottom="15sp"
            android:paddingHorizontal="25sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"/>
    </LinearLayout>
</LinearLayout>